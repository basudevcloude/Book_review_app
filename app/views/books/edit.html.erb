<%#= simple_form_for Book.new, :html=> { :multipart => true } do |f| %>
  <%#= f.select :category_id @categories%>
  <%#= f.input :title, label: "Book Title"%>
  <%#= f.input :description%>
  <%#= f.input :author%>
  <%#= f.button :submit%>
<%# end %>

<h1>Edit the Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book, url: book_path(params[:id])) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.submit "Update" %>

    <% end %>
  </div>
</div>